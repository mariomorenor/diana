          <xpath expr="//button[@name='action_draft']" position="after">
                <button name="action_generate_document" string="Generar Doc. ElectrÃ³nica" type="object" class="oe_highlight" states="done" attrs="{'invisible': ['|', '|', ('sri_authorization', '!=', False), ('state', 'in', ['draft']), ('in_type', 'in', ('ret_out_invoice'))]}"/>
